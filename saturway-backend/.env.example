# ===========================================
# SATURWAY BACKEND - ENVIRONMENT VARIABLES
# ===========================================

# -----------------------
# Server Configuration
# -----------------------
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# -----------------------
# Database (PostgreSQL)
# -----------------------
DATABASE_URL=postgresql://saturway_user:your_password@localhost:5432/saturway
DATABASE_MAX_CONNECTIONS=20
DATABASE_SSL=false

# -----------------------
# JWT Configuration
# -----------------------
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_min_32_characters_long_change_this_in_production
JWT_EXPIRES_IN=7d

# -----------------------
# Telegram Bot
# -----------------------
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Optional: Webhook URL for production
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# -----------------------
# AI Providers
# -----------------------
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Optional: Get from https://platform.openai.com/
OPENAI_API_KEY=sk-your-openai-api-key

# AI Configuration
AI_DEFAULT_PROVIDER=claude
AI_CACHE_TTL=3600

# -----------------------
# Redis
# -----------------------
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3

# -----------------------
# Rate Limiting
# -----------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------
# Logging
# -----------------------
LOG_LEVEL=info

# -----------------------
# CORS
# -----------------------
# In production, set to your frontend domain
CORS_ORIGIN=*

# -----------------------
# Feature Flags
# -----------------------
ENABLE_WEBSOCKETS=false
ENABLE_METRICS=false
